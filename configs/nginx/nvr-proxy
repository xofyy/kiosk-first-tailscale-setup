# /etc/nginx/sites-available/nvr-proxy
# NVR (Hikvision) Reverse Proxy

server {
    listen 8080;
    server_name _;

    set $nvr_host 5.5.5.90;

    # General proxy settings
    proxy_http_version 1.1;
    proxy_set_header Host $nvr_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Authorization $http_authorization;
    proxy_pass_header Authorization;

    # Websocket support (required for live view)
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";

    # Timeouts (long-running streams)
    proxy_connect_timeout 60s;
    proxy_send_timeout 300s;
    proxy_read_timeout 300s;

    # Buffering
    proxy_buffering off;
    proxy_request_buffering off;

    # URL rewriting (NVR IP -> proxy host)
    sub_filter_once off;
    sub_filter_types *;
    sub_filter '5.5.5.90' '$host:8080';
    sub_filter 'ws://5.5.5.90' 'ws://$host:8080';
    sub_filter 'wss://5.5.5.90' 'wss://$host:8080';

    # Web interface
    location / {
        proxy_pass http://$nvr_host;
    }

    # ISAPI endpoints (API calls)
    location /ISAPI/ {
        proxy_pass http://$nvr_host;
    }

    # SDK web components
    location /SDK/ {
        proxy_pass http://$nvr_host;
    }

    # Live view stream
    location /Streaming/ {
        proxy_pass http://$nvr_host;
        proxy_buffering off;
        chunked_transfer_encoding on;
    }

    # WebSocket endpoint
    location /websocket {
        proxy_pass http://$nvr_host;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400;
    }

    # Recording playback
    location /PSIA/ {
        proxy_pass http://$nvr_host;
    }

    # Snapshot capture
    location /picture/ {
        proxy_pass http://$nvr_host;
    }

    # Plugin download (web plugin)
    location ~* \.(exe|cab|dll)$ {
        proxy_pass http://$nvr_host;
    }
}
